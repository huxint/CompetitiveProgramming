[
    {
        "key": "ctrl+shift+a",
        "command": "workbench.action.tasks.runTask",
        "args": "Bundle",
        "when": "editorLangId == cpp || editorLangId == c || editorLangId == hpp || editorLangId == h"
    },
    {
        "key": "ctrl+shift+enter",
        "command": "workbench.action.tasks.runTask",
        "args": "cpp: build-run-clean",
        "when": "editorLangId == cpp || editorLangId == c"
    }
]